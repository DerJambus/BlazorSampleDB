<div class="modal fade show d-block" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Forecast</h4>
                <button class="close"
                        type="button"
                        data-dismiss="modal"
                        aria-label="Close"
                        @onclick="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@_weathCast" OnValidSubmit="@HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-group">
                        <label for="Date">
                            DateTime
                        </label>
                        <InputDate @bind-Value="@_weathCast.Date">

                        </InputDate>
                        <ValidationMessage For="@(()=>_weathCast.Date)" />
                    </div>
                    <div class="form-group">
                        <label for="TempC">
                            TemperaturC
                        </label>
                        <InputNumber @bind-Value="@_weathCast.TemperatureC">

                        </InputNumber>
                        <ValidationMessage For="@(()=>_weathCast.TemperatureC)" />
                    </div>
                    <div class="form-group">
                        <label for="Summary">
                            Summary
                        </label>
                        <InputText @bind-Value="@_weathCast.Summary"
                                   placeholder="cloudy, sunny, rainy, foggy ">
                        </InputText>
                        <ValidationMessage For="@(()=>_weathCast.Summary)" />
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <button class="btn btn-danger" @onclick="Close">Cancel</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>